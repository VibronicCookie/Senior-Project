@page
@model Senior_Project.Pages.SuccessModel
@{
}
<h2>@ViewData["Title"]</h2>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Home page</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        h1 {
            font-family: 'Palanquin';
            text-align: center;
            font-weight: bold;
            font-size: 45px;
            color: #233E8D;
        }

        h3 {
            font-family: 'Palanquin';
            font-weight: bold;
            font-size: 35px;
            color: #233E8D;
        }

        p {
            font-weight: bold;
            font-size: 20px;
        }

        a:visited {
            color: red;
            background-color: transparent;
            text-decoration: none;
        }

        #myCarousel {
            width: 80%; /* Reduce width to make space for links */
            max-height: 1250px;
            margin: auto; /* Center the carousel */
        }

        .carousel-inner .item img {
            width: 100%;
            max-height: 1250px;
        }

        .carousel-container {
            display: flex;
            align-items: flex-start;
            justify-content: space-between;
        }

        #links {
            text-align: center;
        }

        #links a {
            font-size: 20px;
            color: blue;
            background-color: transparent;
            text-decoration: none;
        }

        #links a:visited {
            color: red;
        }

    </style>
</head>
<body>
    <h1>Thomas More Bowling</h1>

    <div class="carousel-container">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/Huddle.jpg" alt="TMB">
                </div>

                <div class="item">
                    <img src="~/Photo 2.jpg" alt="TMB">
                </div>

                <div class="item">
                    <img src="~/BoysAC.jpg" alt="TMB">
                </div>

                <div class="item">
                    <img src="~/GirlsAC.jpg" alt="TMB">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div id="links">
        <h3>Useful Links</h3>
        <a href="https://www.thomasmore.edu/">Thomas More Homepage | </a>
        <a href="https://thomasmoresaints.com/">Thomas More Athletics | </a>
        <a href="https://thomasmoresaints.com/sports/womens-bowling">Women's Bowling Homepage | </a>
        <a href="https://thomasmoresaints.com/sports/mens-bowling">Men's Bowling Homepage</a>
    </div>
</body>