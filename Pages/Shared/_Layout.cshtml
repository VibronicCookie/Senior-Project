<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        span {
            font-weight: 900;
            color: #233E8D;
        }

        li {
            border-bottom: 5px solid #233E8D;
            transition: transform 1s;
        }

        li:hover {
            transform: scale(1.2);
        }

        #navlinks {
            justify-items: center;
            text-align: center;
            font-size: 20px;
        }

        footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            margin: auto 0;
            margin-bottom: -30px;
        }
    </style>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Senior Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Senior Project.styles.css" asp-append-version="true" />
    <link href="Senior Project.styles.css" rel="stylesheet">
</head>
<body>
    <header>
        <div class="navigation">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light" style="background-color: #B4B4B2; border-bottom: 1px solid #000;">
                <div class="container">
                    <img src="~/Thomas More Logo Update.jpg" alt="Thomas More Logo" width="50" height="50">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">Thomas More Bowling</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Index"><span>Home</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Bellewood"><span>Practice Facility</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Tournament"><span>Hammer Saints Classic</span></a>
                            </li>
                        </ul>
                        @*<partial name="_LoginPartial" />*@
                    </div>
                </div>
            </nav>
        </div>
    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top">
        <div id="navlinks">
            <a href="/Bellewood">See our practice facility!</a> |
            <a href="/Tournament">Hammer Saints Classic Results and information</a> |
            <a href="/NewsletterSignUp">Join Us!</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>