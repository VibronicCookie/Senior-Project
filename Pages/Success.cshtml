@page
@model Senior_Project.Pages.SuccessModel
@{
}

<head>
    <style>
        body {
            background: url("Huddle.jpg");
            background-position: top;
            background-repeat: no-repeat;
            background-size: cover;
        }

        h1 {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: 'Palanquin', sans-serif;
            text-align: center;
            font-weight: bold;
            font-size: 45px;
            color: #233E8D;
        }

        input[type="submit"] {
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 16px;
            cursor: pointer;
            background-color: #233E8D;
            color: #ffffff;
            border: none;
            border-radius: 4px;
            transition: background-color 0.3s ease;
            transition: transform 1s;
        }

            input[type="submit"]:hover {
                background-color: #1C3268;
            }
    </style>
</head>

<body>
    <h1>
        Success!
        We have received your information.
    </h1>
    <input type="submit" />
