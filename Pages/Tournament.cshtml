<meta name="viewport" content="width=device-width, initial-scale=1">

<style>
    #main {
        float: left;
        width: auto;
    }

    h1 {
        font-family: 'Palanquin';
        text-align: center;
        font-weight: bold;
        font-size: 45px;
        color: #233E8D;
    }

    #results, #informationheader {
        font-family: 'Palanquin';
        font-weight: bold;
        font-size: 30px;
        color: #233E8D;
    }

    section {
        display: grid;
        grid-template-columns: repeat(2, 1fr); /* Two columns of equal size */
        grid-gap: 20px; /* Space between grid items */
        max-width: 800px; /* Maximum width of the section */
        width: 100%; /* Take up the entire width of the screen */
        margin: auto; /* Center the section horizontally */
        box-sizing: border-box; /* Include padding and borders in total width and height */
    }

        section div {
            padding: 10px; /* Add some padding around the content */
            display: flex; /* Use flexbox for internal alignment */
            flex-direction: column; /* Stack elements vertically */
            align-items: center; /* Center-align the flex items */
        }

        section img {
            width: 100%; /* Make images responsive within their containers */
            max-width: 300px; /* Increase the maximum width for larger images */
            height: auto; /* Maintain aspect ratio */
            margin-top: 10px; /* Space between the link and image */
        }

    #sidenav {
        float: left;
        padding: 10px;
        width: 215px;
        height: 100%;
        background-color: #233E8D;
        color: white;
    }

    #informationbody p {
        line-height: 1; /* Adjust the value as needed */
        margin-bottom: 6px; /* Add some bottom margin for separation */
    }
</style>

