        }

        #informationheader, #informationbody {
            color: white;
            margin-left: 5px;
        }

            #informationbody p {
                line-height: 1;
                margin-bottom: 6px;
            }

        .resizer {
            width: 5px;
            height: 100%;
            position: absolute;
            right: 0;
            top: 0;
            cursor: ew-resize;
        }
    </style>
</head>
