<script>
    if (window.innerWidth > 480) {
        document.addEventListener("DOMContentLoaded", function () {
            var sidebar = document.querySelector('.sidenav');
            var mainContent = document.querySelector('.main');
            var isResizing = false;

            function handleMouseDown(e) {
                isResizing = true;
                document.addEventListener('mousemove', handleMouseMove);
                document.addEventListener('mouseup', () => {
                    isResizing = false;
                    document.removeEventListener('mousemove', handleMouseMove);
                });
            }

            function handleMouseMove(e) {
                if (isResizing) {
                    var newWidth = e.clientX - sidebar.offsetLeft;
                    sidebar.style.width = newWidth + 'px';
                    mainContent.style.marginLeft = newWidth + 'px';
                }
            }

            var resizer = document.createElement('div');
            resizer.className = 'resizer';
            sidebar.appendChild(resizer);

            resizer.addEventListener('mousedown', handleMouseDown);

            // Scroll event listener to check and reposition .sidenav
            window.addEventListener('scroll', function () {
                var scrollPosition = window.scrollY;
                var mainContentRect = mainContent.getBoundingClientRect();

                // Adjust the position of .sidenav based on scroll and main content position
                if (scrollPosition > mainContentRect.top) {
                    sidebar.style.position = 'fixed';
                    sidebar.style.top = '0';
                } else {
                    sidebar.style.position = 'absolute';
                    sidebar.style.top = mainContentRect.top + 'px';
                }
            });
        });
    }
</script>